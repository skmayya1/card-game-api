
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id       String @id @default(cuid()) @map("_id")
  name     String
  email    String  @unique
  balance  Float @default(0)
  picture  String
  roomID   String
  room     Room? @relation(fields: [roomID], references: [id])
}

model Room {
  id       String @id @default(cuid()) @map("_id")
  roomID   String @unique
  name     String
  userIds  String[]
  users    user[]
  }